<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">

        <OnSwipe
            motion:dragDirection="dragUp"
            motion:touchAnchorId="@id/bgBottomImageView"
            motion:touchAnchorSide="top" />

        <KeyFrameSet>
            <!--startDestinationTextView-->
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@id/startDestinationTextView" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="90"
                motion:motionTarget="@id/startDestinationTextView" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="95"
                motion:motionTarget="@id/startDestinationTextView" />

            <!--endDestinationTextView-->
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@id/endDestinationTextView" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="90"
                motion:motionTarget="@id/endDestinationTextView" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="95"
                motion:motionTarget="@id/endDestinationTextView" />

            <!--planeRouteImageView-->
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="50"
                motion:motionTarget="@id/planeRouteImageView" />
            <KeyAttribute
                android:alpha="0"
                motion:framePosition="90"
                motion:motionTarget="@id/planeRouteImageView" />
            <KeyAttribute
                android:alpha="1"
                motion:framePosition="95"
                motion:motionTarget="@id/planeRouteImageView" />
        </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/bgBottomImageView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/planeRouteImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintEnd_toEndOf="@+id/endGuideline"
            motion:layout_constraintStart_toStartOf="@+id/startGuideline"
            motion:layout_constraintTop_toTopOf="@id/topGuideline" />
        <Constraint
            android:id="@+id/startDestinationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="@id/startGuideline"
            motion:layout_constraintTop_toBottomOf="@+id/planeRouteImageView">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/white" />
        </Constraint>
        <Constraint
            android:id="@+id/endDestinationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@+id/endGuideline"
            motion:layout_constraintTop_toBottomOf="@+id/planeRouteImageView">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/white" />
        </Constraint>
        <Constraint
            android:id="@+id/passengerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            motion:layout_constraintStart_toStartOf="@+id/startGuideline"
            motion:layout_constraintTop_toBottomOf="@+id/startAirportTextView" />
        <Constraint
            android:id="@+id/bgQrCodeRootView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/bgBottomImageView" />
        <Constraint
            android:id="@+id/qrCodeIconImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="@+id/bgButtonImageView"
            motion:layout_constraintEnd_toEndOf="@+id/bgButtonImageView"
            motion:layout_constraintStart_toStartOf="@+id/bgButtonImageView"
            motion:layout_constraintTop_toTopOf="@id/bgButtonImageView" />
        <Constraint
            android:id="@+id/iconBottomImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="@+id/bgButtonImageView"
            motion:layout_constraintEnd_toEndOf="@+id/bgButtonImageView"
            motion:layout_constraintStart_toStartOf="@+id/bgButtonImageView"
            motion:layout_constraintTop_toTopOf="@id/bgButtonImageView">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/bgButtonImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            motion:layout_constraintBottom_toBottomOf="@id/bgBottomImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/bgBottomImageView">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/blue" />
        </Constraint>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/bgBottomImageView"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/topQrCodeGuideline">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/planeRouteImageView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            motion:layout_constraintBottom_toBottomOf="@id/startDestinationTextView"
            motion:layout_constraintEnd_toStartOf="@id/endDestinationTextView"
            motion:layout_constraintStart_toEndOf="@id/startDestinationTextView"
            motion:layout_constraintTop_toTopOf="@id/startDestinationTextView" />
        <Constraint
            android:id="@+id/startDestinationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            motion:layout_constraintStart_toStartOf="@id/startGuideline"
            motion:layout_constraintTop_toBottomOf="@id/qrCodeImageView">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/black" />
        </Constraint>
        <Constraint
            android:id="@+id/endDestinationTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintEnd_toStartOf="@+id/endGuideline"
            motion:layout_constraintTop_toTopOf="@id/startDestinationTextView">
            <CustomAttribute
                motion:attributeName="textColor"
                motion:customColorValue="@color/black" />
        </Constraint>
        <Constraint
            android:id="@+id/passengerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            motion:layout_constraintStart_toStartOf="@+id/startGuideline"
            motion:layout_constraintTop_toBottomOf="@+id/startDestinationTextView" />
        <Constraint
            android:id="@+id/bgQrCodeRootView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toBottomOf="@id/bgBottomImageView" />
        <Constraint
            android:id="@+id/iconBottomImageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            motion:layout_constraintBottom_toBottomOf="@+id/bgButtonImageView"
            motion:layout_constraintEnd_toEndOf="@+id/bgButtonImageView"
            motion:layout_constraintStart_toStartOf="@+id/bgButtonImageView"
            motion:layout_constraintTop_toTopOf="@id/bgButtonImageView">
            <CustomAttribute
                motion:attributeName="crossfade"
                motion:customFloatValue="1" />
        </Constraint>
        <Constraint
            android:id="@+id/bgButtonImageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginBottom="28dp"
            motion:layout_constraintBottom_toBottomOf="@id/bgBottomImageView"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent">
            <CustomAttribute
                motion:attributeName="backgroundColor"
                motion:customColorValue="@color/peach" />
        </Constraint>
    </ConstraintSet>
</MotionScene>